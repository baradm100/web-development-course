@{
    ViewData["Title"] = "DashBoard";
}
<div class="container mt-4">
    <div class="mx-auto">
        <h1>MANAGMENT DASHBOARD</h1>
    </div>
    <div class="d-flex flex-column flex-md-row align-items-start">
        <div class="nav flex-md-column me-3 mt-4 bg-light" id="v-pills-tab" role="tablist" aria-orientation="vertical">
            <button class="bg-dark nav-link btn text-white active my-2" style="border: 1px solid white" id="v-pills-home-tab" data-bs-toggle="pill" data-bs-target="#v-pills-graphs" type="button" role="tab" aria-controls="v-pills-graphs" aria-selected="true">Graphs</button>
            <button class="bg-dark nav-link btn text-white my-2" style="border: 1px solid white" id="v-pills-profile-tab" data-bs-toggle="pill" data-bs-target="#v-pills-profile" type="button" role="tab" aria-controls="v-pills-profile" aria-selected="false">Product Sales</button>
            <button class="bg-dark nav-link btn text-white my-2" style="border: 1px solid white" id="v-pills-messages-tab" data-bs-toggle="pill" data-bs-target="#v-pills-messages" type="button" role="tab" aria-controls="v-pills-messages" aria-selected="false">Users</button>
        </div>
        <div class="tab-content ml-4 w-100 h-100" id="v-pills-tabContent">
            <div class="tab-pane fade show active" id="v-pills-graphs" role="tabpanel" aria-labelledby="v-pills-graphs-tab">
                <div class="d-flex flex-column flex-md-row my-4">
                    <div class="bg-white mx-2 my-2">
                        <div class="card-body">
                            <h5 class="card-title">Purchases in Category</h5>
                        </div>
                        <div class="d3-container-category-purchases">

                        </div>
                    </div>
                    <div class="card mx-2 my-2">
                        <div class="card-body">
                            <h5 class="card-title">Orders by Month</h5>
                        </div>
                        <div class="d3-container-order-by-month"></div>
                    </div>
                    <div class="card mx-2 my-2">
                        <div class="card-body">
                            <h5 class="card-title">Stock amount in category</h5>
                        </div>
                        <div class="d3-container-available-stock-category"></div>
                    </div>
                </div>
            </div>
            <div class="tab-pane fade" id="v-pills-profile" role="tabpanel" aria-labelledby="v-pills-profile-tab">
                <div id="dealSearchDiv" class="row g-3 bg-light my-3 pb-3 d-flex flex-column align-items-center flex-md-row justify-content-between">
                    <div class="col">
                        <input type="text" id="orderIdSearch" class="form-control" placeholder="Order Id" aria-label="Order Id">
                    </div>
                    <div class="col">
                        <input type="text" id="userNameSearch" class="form-control" placeholder="User Name" aria-label="User Name">
                    </div>
                    <div class="col">
                        <input type="text" id="userProductSearch" class="form-control" placeholder="Product" aria-label="Product">
                    </div>
                    <div class="col">
                        <div  class="dropdown">
                            <select class="userCategorySearch btn btn-outline-secondary dropdown-toggle " id="categoriesDropDownList" style="border-radius: 18px;" aria-label="Default select example">
                                <option selected multiple>Category Select</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-1 mx-0">
                        <button id="ProductDealSearch" type="button" class="px-2 nav-link text-black btn btn-light position-relative" role="button">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>
                </div>
                <div class="table-responsive" style="max-height:450px">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th scope="col">Order Id</th>
                                <th scope="col">User</th>
                                <th scope="col">Date</th>
                                <th scope="col">Product</th>
                                <th scope="col">Amount</th>
                                <th scope="col">Total Price</th>
                                <th scope="col">Closed Deal</th>
                            </tr>
                        </thead>
                        <tbody class="dealsTableBody overflow-y">
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="tab-pane fade" id="v-pills-messages" role="tabpanel" aria-labelledby="v-pills-messages-tab">
                <div id="usersSearchDiv" class="row g-3 bg-light my-3 pb-3 d-flex flex-column flex-md-row align-items-center">
                    <div class="col">
                        <input type="text" id="nameSearch" class="form-control" placeholder="User Name" aria-label="User Name"/>
                    </div>
                    <div class="col">
                        <input type="text" id="userEmailSearch" class="form-control" placeholder="Email" aria-label="Email"/>
                    </div>
                    <div class="col-1">
                        <button id="usersSearchBtn" type="button" class=" px-2 nav-link text-black btn btn-light position-relative" role="button">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>
                </div>
                <div class="table-responsive" style="max-height:450px">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th scope="col">Id</th>
                                <th scope="col">User</th>
                                <th scope="col">Email</th>
                                <th scope="col">Role</th>
                                <th scope="col">Options</th>
                            </tr>
                        </thead>
                        <tbody class="usersBodyTable ">
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="tab-pane fade" id="v-pills-settings" role="tabpanel" aria-labelledby="v-pills-settings-tab">...</div>
        </div>
    </div>
    
</div>

@section Scripts {
    <script src="https://d3js.org/d3.v7.min.js"></script>
    <script src="~/js/dashboard/dashboard.js"></script>
}