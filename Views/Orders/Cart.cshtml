@model IEnumerable<web_development_course.Models.OrderModels.Order>

@{
    ViewData["Title"] = "Cart";
}
<link rel="stylesheet" href="~/css/cartLargeView.css" />
<h1>Cart</h1>

<div class="row">
    <div class="col-8 md-12">
        <h3>Your Items</h3>
        @{
            var va = Model.First();

            foreach (var order in va.OrderItems)
            {
                <div class="card">
                    <div class="card-body d-flex align-items-center">
                        <ul class="col list-group list-group-flush">
                            <li class="list-group-item">
                                <div class="row">
                                    <div class="col-5 md-12">
                                        <div class="row d-flex justify-content-center">
                                            <div class="col-6 align-middle">
                                                <img src="data:image/png;base64,@order.ProductType.Product.ProductImages.First()" />
                                            </div>
                                            <div class="col-6 align-middle">@order.ProductType.Product.Name</div>
                                        </div>
                                    </div>
                                    <div class="col-7 md-12">
                                        <div class="row d-flex justify-content-center">
                                            <div class="col-3 md-4 align-middle d-flex flex-col">
                                                        <select class="form-select" aria-label="Number Of Items">
                                                            @{for (var i = 1; i < 11; i++)
                                                                {
                                                                    if (i == order.Amount)
                                                                    {
                                                                        <option value="@i" selected>@i</option>
                                                                    }
                                                                    else
                                                                    {
                                                                        <option value="@i">@i</option>
                                                                    }
                                                                }
                                                            }
                                                        </select>
                                            </div>
                                            <div class="col-4 md-4">@order.TotalPrice</div>
                                            <button type="button" class="btn bt-sm btn-outline-danger deleteButton col-3 md-3">
                                                @* TODO: Add delete action *@
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                                     class="bi bi-trash-fill" viewBox="0 0 16 16">
                                                    <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z">
                                                    </path>
                                                </svg>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            }
         }
        
    </div>
    <div class="col-4 md-12 ms-auto">
    <h3> Summary</h3>
        <div class="card">
            <div class="card-body">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <div class="row">
                            <span class="col-6">Price</span>
                            <span class="col-4 sm-6 ms-auto">100</span>
                        </div>
                    </li>
                    <li class="list-group-item">
                        <div class="row">
                            <span class="col-6">Discount</span>
                            <span class="col-4 ms-auto">100</span>
                        </div>
                    </li>
                    <li class="list-group-item">
                        <div class="row">
                            <b class="col-6">Total</b>
                            <b class="col-4 ms-auto">100</b>
                        </div>
                    </li>
                </ul>
                <button class="btn btn-primary" style="width:100%">Checkout</button>
                <button class="btn btn-secondary" style="width:100%">Continue Shopping</button>

            </div>
        </div>
    </div>
</div>