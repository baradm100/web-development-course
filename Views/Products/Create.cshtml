@model web_development_course.Models.ProductModels.ProductImage

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>ProductImage</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Product.Price" class="control-label"></label>
                <input asp-for="Product.Price" class="form-control" />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Name" class="control-label"></label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Size" class="control-label">Size</label>
                <select asp-items="Html.GetEnumSelectList<ProductSize>()" name="Size" class="form-control"></select>
            </div>
            <div class="form-group">
                <label for="Quantity" class="control-label">Quantity</label>
                <input name="Quantity" class="form-control" value="0" />
                <span class="text-danger">@ViewData["QuantityError"]</span>
            </div>
            <div class="form-group">
                <label for="Color" class="control-label">Color</label>
                <input type="color" name="Color" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Product.DiscountPercentage" class="control-label"></label>
                <input asp-for="Product.DiscountPercentage" class="form-control" value="0" />
                <span asp-validation-for="Product.DiscountPercentage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label value="upload image" class="control-label"></label>
                <input name="files" type="file" class="form-control" accept="image/*" />
                <span class="text-danger">@ViewData["ImageError"]</span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Products/Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
