@model IEnumerable<web_development_course.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiscountPercentage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductTypes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductImages)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiscountPercentage)
            </td>
            <td>
                @if (item.ProductTypes != null)
                {
                    @foreach(var color in item.ProductTypes)
                    {
                        <div style="border-radius: 10px; background:@color.Color; width:20px; height:20px; " ></div>
                    }
                } else
                {
                    <div>No Colors</div>
                }
            </td>
            <td>
                <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        @if (item.ProductImages != null)
                        {
                            @foreach (var image in item.ProductImages)
                            {
                                string img = Convert.ToBase64String(image.ImageData);
                                <img src="data:image/png;base64,@img" width="100" height="100" />
                            };
                        } else
                        {
                            <div>No Images</div>

                        }
                    </div>
                </div>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
