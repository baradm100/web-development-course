@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}


<div class="card text-center mt-4">
    <div class="card-header">
        <h3>Sorry</h3>
    </div>
    <div class="card-body">
        <h5 class="card-title"> We cannot find your requested page</h5>
        <p class="card-text">But hey! Keep looking for your items</p>
        <a href="/" class="btn btn-sm btn-outline-primary mb-2">back for shopping</a>
        <div class="d-flex align-items-stretch flex-column">
            <video autoplay muted loop>
                <source src="~/notFoundVideo.mp4" type="video/mp4">
            </video>
        </div>
    </div>
    <div class="card-footer text-muted">
    </div>
</div>
