@model web_development_course.Models.User

@{
    ViewData["Title"] = ViewBag.Title;
    var loginClass = ViewBag.LoginClass;
    var registerClass = ViewBag.RegisterClass;

    string showLogin="", showRegister="";

    if (loginClass.Equals(""))
    {
        showRegister = "show";
    }
    else
    {
        showLogin = "show";
    }
}


<div class="mt-4 row justify-content-center" style="min-height:450px;">
    <div class="col-md-4">
        <ul class="nav nav-tabs nav-justified" id="myTab" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link text-black @loginClass" id="login-tab" data-bs-toggle="tab" data-bs-target="#Login" type="button" role="tab" aria-controls="login" aria-selected="@(!loginClass.Equals(""))">Login</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link text-black @registerClass" id="register-tab" data-bs-toggle="tab" data-bs-target="#Register" type="button" role="tab" aria-controls="register" aria-selected="@(!registerClass.Equals(""))">Register</button>
            </li>
        </ul>
        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade @loginClass @showLogin" id="Login" role="tabpanel" aria-labelledby="login-tab">
                <div class="card d-flex mb-2 bg-white">
                    <div class="card-body ">
                        <form asp-action="Login">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Email" class="control-label"></label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password" class="control-label"></label>
                                <input asp-for="Password" class="form-control" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group mt-2 d-grid">
                                <input type="submit" value="LOGIN" class="btn btn-primary bg-black text-white" />
                            </div>
                            @if (!String.IsNullOrEmpty(ViewBag.Error))
                            {
                                <div class="text-danger">@ViewBag.Error</div>
                            }
                        </form>
                    </div>
                </div>
            </div>
            <div class="tab-pane fade @registerClass @showRegister" id="Register" role="tabpanel" aria-labelledby="register-tab">
                <div class="card d-flex mb-2 bg-white">
                    <div class="card-body ">
                        <form asp-action="Register">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="FirstName" class="control-label">First Name</label>
                                <input asp-for="FirstName" class="form-control" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="LastName" class="control-label">Last Name</label>
                                <input asp-for="LastName" class="form-control" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Phone" class="control-label"></label>
                                <input asp-for="Phone" class="form-control" maxlength="10" type="tel"/>
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password" class="control-label"></label>
                                <input asp-for="Password" class="form-control" id="password" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Confirm Password</label>
                                <input type="password" id="Confirm-Password" class="form-control" required />
                                <span id="confirm-error" class="text-danger d-none">Passwords do not match</span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Email" class="control-label"></label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="DateOfBirth" class="control-label">Birthday</label>
                                <input asp-for="DateOfBirth" class="form-control" />
                                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                            </div>
                            <div class="form-group mt-2 d-grid">
                                <input type="submit" id="register" value="REGISTER" class="btn btn-primary bg-black text-white" />
                            </div>
                            @if (!String.IsNullOrEmpty(ViewBag.Error))
                            {
                                <div class="text-danger">@ViewBag.Error</div>
                            }
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
